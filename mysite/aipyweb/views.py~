from django.shortcuts import render
from django.http import HttpResponse

def return_file():
    file = open('aipyweb/index.html', 'w')
    f_v = open('aipyweb/f_vertical.txt', 'w')
    f_h = open('aipyweb/f_break_hor.txt', 'w')  
    f_bv = open('aipyweb/f_break_ver.txt', 'w')
    f_bh = open('aipyweb/f_horisontal.txt', 'w')  
    file.write("<html>\n")
    file.write("	<head>\n")
    file.write("		<title>canvasExample</title>\n")
    file.write("    	<meta charset='utf-8' />\n")
    file.write("	<head>\n")
    file.write("	<body>\n")
    file.write("		<canvas height='720' width='1024' id='example'>update browser</canvas>\n")
    file.write("    <script>\n")
    file.write("        var example = document.getElementById('"'example'"'),\n")
    file.write("            ctx     = example.getContext('2d');\n")
    file.write("	    ctx.fillStyle = '"'orange'"';\n")
    file.write("        ctx.fillRect(100, 100, example.width, example.height);\n")
    file.write("	    line_1     = example.getContext('2d');\n")
    file.write("	    line_1.fillStyle = '"'gray'"';\n")
    file.write("	    line_1.fillRect(100, 100, 924, 6);\n")
    file.write("            line_1.fillRect(100, 100, 6, 620);\n")
    file.write("	    line_1.fillRect(100, 714, 924, 6);\n")
    file.write("	    line_1.fillRect(1018, 100, 6, 620);\n")
    file.write("	    line_1.fillRect(100, 200, 724, 6);\n")
    file.write("            line_1.fillRect(300, 620, 724, 6);\n")
    file.write("            line_1.fillRect(400, 300, 6, 250);\n")
    file.write("            line_1.fillRect(700, 300, 6, 250);\n")
    f_v.write("100, 100, 620\n") #begin lenght, begin height, len  
    f_v.write("1024, 100, 620\n")
    f_h.write("100, 100, 924\n") #begin height, begin lenght, len
    f_h.write("720, 100, 924\n") 
    f_h.write("200, 100, 724\n")
    f_h.write("620, 300, 724\n")
    f_v.write("400, 300, 250\n")
    f_v.write("700, 300, 250\n")
    file.write("	    line_2     = example.getContext('2d');\n")
    file.write("	    line_2.fillStyle = '"'red'"';\n")
    file.write("            line_2.fillRect(824, 200, 194, 6);\n")
    file.write("            line_2.fillRect(106, 620, 200, 6);\n")
    file.write("            line_2.fillRect(550, 206, 6, 414);\n")
    file.write("	    line_2.fillRect(106, 420, 294, 6);\n")
    file.write("            line_2.fillRect(706, 420, 312, 6);\n")
    f_bv.write("550, 206, 414\n")
    f_bh.write("200, 824, 294\n")
    f_bh.write("620, 106, 200\n")
    f_bh.write("420, 106, 294\n")
    f_bh.write("420, 706, 312\n")
    file.write("        </script>\n")
    file.write("	</body>\n")
    file.write("</html>\n")
    file.close()
    f_v.close()
    f_h.close()
    f_bv.close()
    f_bh.close()

def index(request):
    return_file()
    file = open('aipyweb/index.html', 'r')
    return HttpResponse(file)
